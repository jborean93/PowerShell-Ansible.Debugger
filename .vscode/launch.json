{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "PowerShell & .NET Debug Session",
            "type": "PowerShell",
            "request": "launch",
            "cwd": "${cwd}",
            "script": "${workspaceFolder}/tools/LaunchScript.ps1 -NoExit",
            "attachDotnetDebugger": true,
            "createTemporaryIntegratedConsole": true,
        },
        {
            "name": ".NET Debug Session",
            "type": "coreclr",
            "request": "launch",
            "program": "pwsh",
            "args": [
                "-NoExit",
                "-NoProfile",
                "-File",
                "${workspaceFolder}/tools/LaunchScript.ps1"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal",
        },
    ],
}
